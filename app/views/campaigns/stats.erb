<h1><%=@campaign.name%></h1>

<p>Total emails: <%=@campaign.emails.count%></p>
<p>Total tweets: <%=@campaign.tweets.count%></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>        
      <th>Party</th>
      <th>Constituency</th>      
      <th>Emails</th>
      <th>Tweets</th>
    </tr>
  </thead>
  <% @campaign.decisions.each { |decision| representative = decision.representative %>
    <tr>
      <td><%=representative.name%></td>
      <td><%=representative.type%></td>        
      <td><%=representative.party.try(:name)%></td>
      <td><%=representative.constituency.try(:name)%></td>      
      <td><%=decision.emails.count%></td>
      <td><%=decision.tweets.count%></td>    
    </tr>
  <% } %>
</table>


<script>
  $(function () {

    $('table').tablesorter({})

  });

</script>
