  <h1>Tweet <%=@target.name%></h1>

  <div class="row">
    <div class="col-md-6 col-md-push-6" style="margin-bottom: 20px">
      <%=@campaign.advice%>
    </div>            
    <div class="col-md-6 col-md-pull-6">                      
      <% form_for @tweet, "/campaigns/#{@campaign.slug}/#{@decision.id}/tweet", :onsubmit => "window.open('http://twitter.com/intent/tweet?text='+encodeURIComponent($('#tweet_body').val()), null, 'scrollbars=yes,width=600,height=600,left=150,top=150').focus();" do |f| %>
        <%= f.text_area_block :body, :div_class => '', :label_class => '' %>
        <%= f.text_block :from_name, :div_class => '', :label_class => '' %>
        <%= f.email_block :from_email, :div_class => '', :label_class => '' %>
        <%= f.text_block :from_postcode, :div_class => '', :label_class => '' %>
        <%= f.submit_block button_text: 'Send', :div_class => '' %>
      <% end %>
    </div>
  </div>  